<?xml version="1.0" encoding="utf-8" ?>
<SettingsMenuScreens>

	<SettingsMenuScreen
		Platform="default"
		OpenSound="/SFX/Menu Sounds/InfoTextAppear"
		CloseSound="/SFX/Menu Sounds/InfoPanelLeave"
		SelectionSound="/SFX/Menu Sounds/MenuBackOut"
		UseSelectionSoundWithMouse="false"
		ShowControls="false">

		<Back Justification="Left" Red="0" Green="0" Blue="0" Alpha="1.0"/>
		<AnimatedBackground X="0.01" Y="0.01" Graphic="WarningBackgroundLoop" Justification="Left" VerticalJustification="Top"/>
		<AnimatedBackgroundTop X="960" Y="430" Graphic="ShellBackgroundMainIntro" Justification="Center" VerticalJustification="Center"/>

		<TitleText X="960" Y="150" Justification="Center" VerticalJustification="Center"
				   HelpTextId="SettingsScreen_Title" Font="JuliusSansOne48Titling"
				   OutlineThickness="0"
				   AlwaysUpperCase="true" Scale="0.75"
					NonEnglishScaleModifier="0.7"
				   TextRed="1" TextGreen="1" TextBlue="1" TextOutlineRed="1" TextOutlineGreen="0.7" TextOutlineBlue="0"/>

		<AudioVisualSettingsButton X="962" Y="350" Justification="Center" VerticalJustification="Center"
					Graphic="GUI\\Shell\\icons_generic" SelectedGraphic="GUI\\Shell\\selection_reticle_pause"
					Scale="1.0" Width="500" Height="34"
					HelpTextId="SettingsScreen_General" Font="RalewayMedium26"
					TextRed="0.31" TextGreen="0.52" TextBlue="0.48"
					SelectedTextRed="1.0" SelectedTextGreen="1.0" SelectedTextBlue="1.0"
					AlwaysUpperCase="true"
					TextScale="1.0"
					TextJustification="Left"
					TextOffsetX="-180"
					FadeOpacity="0.0" FadeTarget="1.0" FadeDelayMin="0.05" FadeDelayMax="0.1" FadeSpeed="10.0"
					SelectedTextScale="1.0"/>

		<ControlsButton AttachTo="AudioVisualSettingsButton" OffsetY="80" Justification="Center" VerticalJustification="Center"
					Graphic="GUI\\Shell\\icons_generic" SelectedGraphic="GUI\\Shell\\selection_reticle_pause"
					Scale="1.0" Width="500" Height="34"
					HelpTextId="SettingsScreen_Controls" Font="RalewayMedium26"
					TextRed="0.31" TextGreen="0.52" TextBlue="0.48"
					SelectedTextRed="1.0" SelectedTextGreen="1.0" SelectedTextBlue="1.0"
					SelectedTextScale="1.0"
					AlwaysUpperCase="true"
					TextScale="1.0"
					TextJustification="Left"
					TextOffsetX="-180"
					FadeOpacity="0.0" FadeTarget="1.0" FadeDelayMin="0.15" FadeDelayMax="0.2" FadeSpeed="10.0"
					PressSound="null"/>

		<ProfilesButton AttachTo="ControlsButton" OffsetY="80" Justification="Center" VerticalJustification="Center"
					Graphic="GUI\\Shell\\icons_generic" SelectedGraphic="GUI\\Shell\\selection_reticle_pause"
					Scale="1.0" Width="500" Height="34"
					HelpTextId="SettingsScreen_Profiles" Font="RalewayMedium26"
					TextRed="0.31" TextGreen="0.52" TextBlue="0.48"
					SelectedTextRed="1.0" SelectedTextGreen="1.0" SelectedTextBlue="1.0"
					SelectedTextScale="1.0"
					AlwaysUpperCase="true"
					TextScale="1.0"
					TextJustification="Left"
					TextOffsetX="-180"
					FadeOpacity="0.0" FadeTarget="1.0" FadeDelayMin="0.15" FadeDelayMax="0.2" FadeSpeed="10.0"
					PressSound="null"/>

		<ResolutionButton AttachTo="ProfilesButton" OffsetY="80" Justification="Center" VerticalJustification="Center"
					Graphic="GUI\\Shell\\icons_generic" SelectedGraphic="GUI\\Shell\\selection_reticle_pause"
					Scale="1.0" Width="500" Height="34"
					HelpTextId="SettingsScreen_Resolution" Font="RalewayMedium26"
					TextRed="0.31" TextGreen="0.52" TextBlue="0.48"
					SelectedTextRed="1.0" SelectedTextGreen="1.0" SelectedTextBlue="1.0"
					SelectedTextScale="1.0"
					AlwaysUpperCase="true"
					TextScale="1.0"
					TextJustification="Left"
					TextOffsetX="-180"
					FadeOpacity="0.0" FadeTarget="1.0" FadeDelayMin="0.05" FadeDelayMax="0.1" FadeSpeed="10.0"
					PressSound="null"/>

		<LanguageButton AttachTo="ResolutionButton" OffsetY="80" Justification="Center" VerticalJustification="Center"
					Graphic="GUI\\Shell\\icons_generic" SelectedGraphic="GUI\\Shell\\selection_reticle_pause"
					Scale="1.0" Width="500" Height="34"
					HelpTextId="SettingsScreen_Language" Font="RalewayMedium26"
					TextRed="0.31" TextGreen="0.52" TextBlue="0.48"
					SelectedTextRed="1.0" SelectedTextGreen="1.0" SelectedTextBlue="1.0"
					SelectedTextScale="1.0"
					AlwaysUpperCase="true"
					TextScale="1.0"
					TextJustification="Left"
					TextOffsetX="-180"
					FadeOpacity="0.0" FadeTarget="1.0" FadeDelayMin="0" FadeDelayMax="0.05" FadeSpeed="10.0"
					PressSound="null"/>
		
		<!-- Info Panel -->

		<DimBox Justification="Left" Red="0" Green="0" Blue="0" Alpha="0.4"/>
		<InfoPanel X="960" Y="540" Justification="Left" VerticalJustification="Center" />
		<InfoText X="960" Y="540" Justification="Left" VerticalJustification="Center" TextRed="1.0" TextGreen="1.0" TextBlue="1.0" Width="830"/>
		
		<!-- Controls -->

		<ConfirmButton
			Graphic="GUI\\PS4Controller\\ps4ControllerX" HelpTextId="Shell_Confirm"
			PressSound="/SFX/Menu Sounds/PowerSelecting" DisabledPressSound="/SFX/Menu Sounds/MenuDenied"
			Scale="0.25" Justification="Center" VerticalJustification="Center"
			AlwaysUpperCase="true"
			TextScale="0.9" TextJustification="Left"
			Font="RalewaySemiBold22" TextRed="1.0" TextGreen="1.0" TextBlue="1.0"
			X="680" Y="940"
			/>

		<CancelButton
			Graphic="GUI\\PS4Controller\\ps4ControllerCircle" HelpTextId="Shell_back"
			Scale="0.25" Justification="Center" VerticalJustification="Center"
			AlwaysUpperCase="true"
			TextScale="0.9" TextJustification="Left"
			Font="RalewaySemiBold22" TextRed="1.0" TextGreen="1.0" TextBlue="1.0"
			X="1170" Y="940"
			MouseOffsetX="-210"
			/>

		<XButton Scale="0.0"/>
		<YButton Scale="0.0"/>

	</SettingsMenuScreen>
	
</SettingsMenuScreens>
